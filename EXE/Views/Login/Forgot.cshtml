@{
    ViewData["Title"] = "Login Page";
}
<form asp-controller="Login" method="post">
    <div class="contentLogin  container-fluid">
        <div class="container containerForm backgroundLogin">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <img class="imgLogin" src="/image/Login.png" alt="Ảnh mẫu" />
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="row loginForm">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-8">
                            <h1>Gimme Store</h1>
                            <p class="pAccount">Gmail</p>
                            <input name="gmail" type="text"
                                   placeholder="Hãy nhập gmail tại đây" />
                            <button type="submit" formaction="OTPForgot" class="btnSubmit">Gửi OTP</button>
                            <p class="pAccount">Mật khẩu mới</p>
                            <input name="password" type="password"
                                   placeholder="Hãy nhập mật khẩu mới tại đây" />
                            <button type="submit" formaction="ChangePassword" class="btnSubmit">Đổi mật khẩu</button>
                            <p class="createAccount">
                                Bạn chưa có tài khoản? <a asp-action="Register" asp-controller="Login">Đăng ký</a>
                            </p>
                            <p class="createAccount">
                                <a asp-action="Index" asp-controller="Login" >Đăng nhập</a>
                            </p>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>