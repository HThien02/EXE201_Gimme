@{
    ViewData["Title"] = "OTP Page";
}
<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="row rowFormAddress col-lg-6">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <form class="formAddress" asp-action="OTP" asp-controller="Login" method="post">
                    <h1>Xác thực OTP</h1>
                    <p>OTP</p>
                    <input class="ipAddress" type="text" name="otp" placeholder="Nhập OTP tại đây">

                    <!-- Hidden fields to pass TempData values -->
                    <input type="hidden" name="UserPassword" value="@TempData["UserPassword"]" />
                    <input type="hidden" name="UserGmail" value="@TempData["UserGmail"]" />
                    <input type="hidden" name="UserUsername" value="@TempData["UserUsername"]" />
                    <input type="hidden" name="UserOTP" value="@TempData["UserOTP"]" />

                    <div class="addressBtn">
                        <button type="submit" class="btnAddress">Xác nhận</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
