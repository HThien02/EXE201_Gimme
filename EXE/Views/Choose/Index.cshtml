

<form id="designForm" asp-controller="Choose" asp-action="Choose" method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h3 class="ChooseItem">@EXE.Resources.Resource.ChooseItem</h3>

                <input type="hidden" name="PaperType" id="PaperType">
                <input type="hidden" name="Size" id="Size">
                <input type="hidden" name="BookCuffColor" id="BookCuffColor">
                <input type="hidden" name="NumberOfPages" id="NumberOfPages">
                <input type="hidden" name="ImageFrontPath" id="ImageFrontPath">
                <input type="hidden" name="ImageBackPath" id="ImageBackPath">

                <div class="row row6">
                    <div class="col-lg-5">
                        <p class="paper">@EXE.Resources.Resource.NameOfNote</p>
                        <input class="inputChoose" type="text" name="NotebookName" id="NotebookName">
                    </div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-5">
                        <p class="paper">@EXE.Resources.Resource.Note</p>
                        <input class="inputChoose" type="text" name="NotebookDescription" id="NotebookDescription">
                    </div>
                </div>

                <div class="row row1">
                    <p class="paper">@EXE.Resources.Resource.Paper</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="1">Dot</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="2">Line</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="4">Caro</button></div>
                </div>

                <div class="row row2">
                    <p class="paper">@EXE.Resources.Resource.Size</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="1">A4</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="2">A5</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="3">B5</button></div>
                    <div class="col-lg-3"></div>
                </div>

                <div class="row row3">
                    <p class="paper">@EXE.Resources.Resource.Spring</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="1">@EXE.Resources.Resource.Black</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="2">@EXE.Resources.Resource.White</button></div>
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3"></div>
                </div>

                <div class="row row4">
                    <p class="paper">@EXE.Resources.Resource.Number</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="1">90</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="2">120</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="3">200</button></div>
                    <div class="col-lg-3"></div>
                </div>

                <div class="row">
                    <div class="row col-lg-6">
                        <p class="paperDesign">@EXE.Resources.Resource.DesignByYourSelf</p>
                        <div class="col-lg-12"></div>
                        <p class=""></p>
                        <button type="button" class="btnChoose" value="design">
                            <a asp-action="Index" asp-controller="Design">@EXE.Resources.Resource.Design</a>
                        </button>
                    </div>
                    <div class="row col-lg-6">
                        <p class="paperDesign">@EXE.Resources.Resource.ImportDesign</p>
                        <div class="col-lg-6 row5">
                            <p class="paperDesign">@EXE.Resources.Resource.FrontSide</p>
                            <button type="button" id="selectImageFrontButton" class="btnChoose" value="importFront">@EXE.Resources.Resource.Import</button>
                            <input type="file" id="fileInputFront" style="display: none;" accept="image/*">
                        </div>
                        <div class="col-lg-6 row6">
                            <p class="paperDesign">@EXE.Resources.Resource.BackSide</p>
                            <button type="button" id="selectImageBackButton" class="btnChoose" value="importBack">@EXE.Resources.Resource.Import</button>
                            <input type="file" id="fileInputBack" style="display: none;" accept="image/*">
                        </div>
                    </div>
                </div>

                <div class="submit">
                    <button type="button" class="btnChooseSubmit"> <a asp-action="Index" asp-controller="Demo3D">@EXE.Resources.Resource.WatchDemo</a></button>
                </div>
                <div class="submit">
                    <button type="submit" class="btnChooseSubmit">@EXE.Resources.Resource.Payment</button>
                </div>
            </div>
            <div class="col-lg-5">
                <img class="imgDemo" src="/image/Login.png" alt="">
            </div>
            <div class="popup">
                <div class="popup-content">
                    <img class="popupImage" src="/image/Logo.png" alt="Ảnh">
                </div>
            </div>
        </div>
        <div class="overlay">
            <div class="popup-alert">
                <h3>Thông báo</h3>
                <p>Đây là thông báo</p>
                <button class="btnPopup">Xác nhận</button>
            </div>
        </div>
    </div>
</form>
